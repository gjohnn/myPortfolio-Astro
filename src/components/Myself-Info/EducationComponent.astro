// src/components/Education.astro
---

<section class="max-w-4xl mx-auto py-12 px-6">
  <h2 class="text-4xl font-bold text-center mb-12 bg-gradient-to-r from-indigo-400 to-cyan-400 bg-clip-text text-transparent">
    Education & Certifications
  </h2>

  <ul class="space-y-8">
    <!-- Associate Degree -->
    <li class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border-l-4 border-indigo-400">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
        <div>
          <h3 class="text-2xl font-bold text-indigo-300">Associate of Computer Science</h3>
          <p class="text-gray-400 mt-1">Current Student at UTN</p>
        </div>
        <span class="px-4 py-1 bg-indigo-900/30 text-indigo-300 rounded-full text-sm">2023 - Present</span>
      </div>
    </li>

    <!-- Certifications -->
    <li class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border-l-4 border-yellow-400">
      <h3 class="text-2xl font-bold text-yellow-400 mb-4">Certifications</h3>
      <ul class="space-y-4">
        <li>
          <div class="flex flex-col md:flex-row md:justify-between">
            <p class="text-gray-300 font-medium">Java Spring Developer (IT Hotbed)</p>
            <span class="text-gray-400 text-sm md:text-base">2024</span>
          </div>
        </li>
        <li>
          <div class="flex flex-col md:flex-row md:justify-between">
            <p class="text-gray-300 font-medium">GNU/Linux Manager</p>
            <span class="text-gray-400 text-sm md:text-base">2024</span>
          </div>
        </li>
      </ul>
    </li>

    <!-- IT Orientation School -->
    <li class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border-l-4 border-green-400">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
        <div>
          <h3 class="text-2xl font-bold text-green-400">IT Orientation School</h3>
          <p class="text-gray-300 mt-1">Escuela de Comercio Martin Zapata</p>
        </div>
        <span class="px-4 py-1 bg-green-900/30 text-green-300 rounded-full text-sm">2017 - 2021</span>
      </div>
    </li>

    <!-- English Certification -->
    <li class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border-l-4 border-blue-400">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
        <div>
          <h3 class="text-2xl font-bold text-blue-400">B2 English Certification</h3>
          <p class="text-gray-300 mt-1">Colegio de Lenguas Extranjeras</p>
        </div>
        <span class="px-4 py-1 bg-blue-900/30 text-blue-300 rounded-full text-sm">2016 - 2020</span>
      </div>
    </li>
  </ul>
</section>
---
// src/components/Myself-info/Experience.astro
import experiences from '../../data/experiences';
---

<section class="max-w-4xl mx-auto py-12 px-6">
  <h2 class="text-4xl font-bold text-center mb-12 bg-gradient-to-r from-indigo-400 to-cyan-400 bg-clip-text text-transparent">
    Professional Experience
  </h2>

  <div class="space-y-10">
    {
      experiences.map((exp) => (
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 shadow-lg border-l-4 border-indigo-400 hover:border-cyan-400 transition-all duration-300">
          <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-4 gap-2">
            <h3 class="text-2xl font-bold text-indigo-300">
              {exp.company}{exp.project && ` - ${exp.project}`}
            </h3>
            <div class="flex flex-wrap gap-2">
              {exp.technologies.map((tech) => (
                <span class="px-3 py-1 bg-indigo-900/50 text-indigo-200 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
          </div>
          
          <div class="mb-6">
            <p class="font-medium text-lg text-cyan-100">{exp.role}</p>
            <p class="text-gray-400">{exp.period}</p>
          </div>
          
          <ul class="space-y-3 pl-5 list-disc list-outside text-gray-300 marker:text-indigo-400">
            {exp.responsibilities.map((resp) => (
              <li>{resp}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
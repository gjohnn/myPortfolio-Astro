---
// My App Installer - PowerShell Script
const installCommand = 'iwr -useb https://raw.githubusercontent.com/gjohnn/my-app-installer/main/install.ps1 | iex';
---

<section class="card p-6 sm:p-8 relative overflow-hidden">
  <!-- Header -->
  <div class="flex items-center gap-4 mb-6">
    <div class="w-16 h-16 rounded-lg flex items-center justify-center flex-shrink-0"
         style="background: var(--comic-green); border: 3px solid var(--comic-black); box-shadow: 4px 4px 0 var(--comic-black);">
      <i class="fas fa-download text-white text-2xl"></i>
    </div>
    <div>
      <h3 class="comic-title text-2xl" style="color: var(--comic-green);">App Installer</h3>
      <p style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">PowerShell Automation</p>
    </div>
  </div>

  <!-- Terminal Preview -->
  <div class="mb-6 rounded-lg overflow-hidden" style="border: 3px solid var(--comic-black); box-shadow: 4px 4px 0 var(--comic-black);">
    <!-- Terminal Header -->
    <div class="flex items-center gap-2 px-4 py-2" style="background: var(--comic-black);">
      <div class="w-3 h-3 rounded-full" style="background: var(--comic-red);"></div>
      <div class="w-3 h-3 rounded-full" style="background: var(--comic-yellow);"></div>
      <div class="w-3 h-3 rounded-full" style="background: var(--comic-green);"></div>
      <span class="ml-2 text-xs" style="color: var(--comic-cream); font-family: var(--font-code);">PowerShell</span>
    </div>
    <!-- Terminal Body -->
    <div class="p-4" style="background: #1E1E2E;">
      <p class="text-sm break-all" style="font-family: var(--font-code); color: var(--comic-green);">
        <span style="color: var(--comic-yellow);">PS&gt;</span> {installCommand}
      </p>
    </div>
  </div>

  <!-- Copy Button -->
  <button id="copy-installer-btn" class="btn btn-secondary w-full justify-center mb-4"
          data-command={installCommand}>
    <i class="fas fa-copy mr-2"></i>
    <span>Copy Install Command</span>
  </button>

  <!-- Tech Badges -->
  <div class="flex flex-wrap gap-2 mb-4">
    <span class="tech-badge">PowerShell 7</span>
    <span class="tech-badge">Winget</span>
    <span class="tech-badge">Windows</span>
  </div>

  <!-- GitHub Link -->
  <a href="https://github.com/gjohnn/my-app-installer" target="_blank" rel="noopener noreferrer"
     class="btn btn-primary w-full justify-center">
    <i class="fab fa-github mr-2"></i>
    View on GitHub
  </a>
</section>

<script>
  const copyBtn = document.getElementById('copy-installer-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      const command = copyBtn.getAttribute('data-command') || '';
      try {
        await navigator.clipboard.writeText(command);
        const span = copyBtn.querySelector('span');
        const icon = copyBtn.querySelector('i');
        if (span) span.textContent = 'Copied!';
        if (icon) { icon.className = 'fas fa-check mr-2'; }
        setTimeout(() => {
          if (span) span.textContent = 'Copy Install Command';
          if (icon) { icon.className = 'fas fa-copy mr-2'; }
        }, 2000);
      } catch (err) {
        console.error('Copy failed', err);
      }
    });
  }
</script>
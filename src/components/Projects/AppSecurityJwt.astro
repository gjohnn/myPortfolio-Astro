---
// Spring Security JWT Project
---

<section class="card p-6 sm:p-8 relative overflow-hidden">
  <!-- Header -->
  <div class="flex items-center gap-4 mb-6">
    <div class="w-16 h-16 rounded-lg flex items-center justify-center flex-shrink-0"
         style="background: var(--comic-orange); border: 3px solid var(--comic-black); box-shadow: 4px 4px 0 var(--comic-black);">
      <i class="fas fa-shield-alt text-white text-2xl"></i>
    </div>
    <div>
      <h3 class="comic-title text-2xl" style="color: var(--comic-orange);">Security JWT</h3>
      <p style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">Spring Boot Authentication</p>
    </div>
  </div>

  <!-- API Endpoints Preview -->
  <div class="space-y-4 mb-6">
    <!-- Register Endpoint -->
    <div class="rounded-lg overflow-hidden" style="border: 3px solid var(--comic-black); box-shadow: 3px 3px 0 var(--comic-black);">
      <div class="flex items-center justify-between px-4 py-2" style="background: var(--comic-green); color: white;">
        <span style="font-family: var(--font-code); font-size: 0.8rem; font-weight: bold;">POST /auth/register</span>
        <button class="copy-json-btn text-xs px-2 py-1 rounded" style="background: rgba(255,255,255,0.3); color: white; cursor: pointer;"
                data-json='{"username": "hero", "password": "secret123", "email": "hero@comics.com"}'>
          <i class="fas fa-copy"></i>
        </button>
      </div>
      <div class="p-3" style="background: #1E1E2E;">
        <pre class="text-xs" style="font-family: var(--font-code); color: var(--comic-green);">{JSON.stringify({username: "hero", password: "secret123", email: "hero@comics.com"}, null, 2)}</pre>
      </div>
    </div>

    <!-- Login Endpoint -->
    <div class="rounded-lg overflow-hidden" style="border: 3px solid var(--comic-black); box-shadow: 3px 3px 0 var(--comic-black);">
      <div class="flex items-center justify-between px-4 py-2" style="background: var(--comic-blue); color: white;">
        <span style="font-family: var(--font-code); font-size: 0.8rem; font-weight: bold;">POST /auth/login</span>
        <button class="copy-json-btn text-xs px-2 py-1 rounded" style="background: rgba(255,255,255,0.3); color: white; cursor: pointer;"
                data-json='{"username": "hero", "password": "secret123"}'>
          <i class="fas fa-copy"></i>
        </button>
      </div>
      <div class="p-3" style="background: #1E1E2E;">
        <pre class="text-xs" style="font-family: var(--font-code); color: var(--comic-blue);">{JSON.stringify({username: "hero", password: "secret123"}, null, 2)}</pre>
      </div>
    </div>
  </div>

  <!-- Tech Stack -->
  <div class="flex flex-wrap gap-2 mb-6">
    <span class="tech-badge">Java 21</span>
    <span class="tech-badge">Maven 4.0.0</span>
    <span class="tech-badge">Spring 3.4.2</span>
    <span class="tech-badge">PostgreSQL 17</span>
  </div>

  <!-- GitHub -->
  <a href="https://github.com/gjohnn/app-security-jwt" target="_blank" rel="noopener noreferrer"
     class="btn btn-primary w-full justify-center">
    <i class="fab fa-github mr-2"></i>
    View on GitHub
  </a>
</section>

<script>
  document.querySelectorAll('.copy-json-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const json = btn.getAttribute('data-json') || '';
      try {
        await navigator.clipboard.writeText(json);
        const icon = btn.querySelector('i');
        if (icon) { icon.className = 'fas fa-check'; }
        setTimeout(() => {
          if (icon) { icon.className = 'fas fa-copy'; }
        }, 2000);
      } catch (err) {
        console.error('Copy failed', err);
      }
    });
  });
</script>
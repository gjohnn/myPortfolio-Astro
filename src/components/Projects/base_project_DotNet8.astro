---
// .NET 8 API Base Project
const cloneCommand = 'git clone https://github.com/gjohnn/base_projects_dotnet8.git';
---

<section class="card p-6 sm:p-8 relative overflow-hidden">
  <!-- Header -->
  <div class="flex items-center gap-4 mb-6">
    <div class="w-16 h-16 rounded-lg flex items-center justify-center flex-shrink-0"
         style="background: var(--comic-blue); border: 3px solid var(--comic-black); box-shadow: 4px 4px 0 var(--comic-black);">
      <i class="fab fa-microsoft text-white text-2xl"></i>
    </div>
    <div>
      <h3 class="comic-title text-2xl" style="color: var(--comic-blue);">.NET 8 Template</h3>
      <p style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">Enterprise API Boilerplate</p>
    </div>
  </div>

  <!-- Code Preview -->
  <div class="mb-6 rounded-lg overflow-hidden" style="border: 3px solid var(--comic-black); box-shadow: 4px 4px 0 var(--comic-black);">
    <div class="flex items-center gap-2 px-4 py-2" style="background: var(--comic-black);">
      <div class="w-3 h-3 rounded-full" style="background: var(--comic-red);"></div>
      <div class="w-3 h-3 rounded-full" style="background: var(--comic-yellow);"></div>
      <div class="w-3 h-3 rounded-full" style="background: var(--comic-green);"></div>
      <span class="ml-2 text-xs" style="color: var(--comic-cream); font-family: var(--font-code);">Program.cs</span>
    </div>
    <div class="p-4" style="background: #1E1E2E;">
      <pre class="text-xs leading-relaxed" style="font-family: var(--font-code); color: #D4D4D4;"><span style="color: var(--comic-blue);">var</span> builder = WebApplication.CreateBuilder(args);
<span style="color: #6A9955;">// Clean Architecture Setup</span>
builder.Services.AddControllers();
builder.Services.AddEndpointsApiExplorer();
builder.Services.AddSwaggerGen();
<span style="color: var(--comic-blue);">var</span> app = builder.Build();
app.Run();</pre>
    </div>
  </div>

  <!-- Clone Command -->
  <div class="mb-4">
    <div class="flex items-center gap-2 p-3 rounded-lg" style="background: var(--comic-cream); border: 2px dashed var(--comic-black);">
      <code class="text-xs flex-1 break-all" style="font-family: var(--font-code); color: var(--comic-black);">{cloneCommand}</code>
      <button id="copy-dotnet-btn" class="flex-shrink-0 px-3 py-1 rounded" 
              style="background: var(--comic-blue); color: white; border: 2px solid var(--comic-black); cursor: pointer; font-family: var(--font-code); font-size: 0.75rem;"
              data-command={cloneCommand}>
        <i class="fas fa-copy"></i>
      </button>
    </div>
  </div>

  <!-- Features -->
  <div class="grid grid-cols-2 gap-2 mb-6">
    <div class="flex items-center gap-2 text-sm">
      <i class="fas fa-bolt" style="color: var(--comic-yellow-dark);"></i>
      <span style="font-family: var(--font-body); font-weight: 700;">Clean Architecture</span>
    </div>
    <div class="flex items-center gap-2 text-sm">
      <i class="fas fa-bolt" style="color: var(--comic-yellow-dark);"></i>
      <span style="font-family: var(--font-body); font-weight: 700;">CQRS Pattern</span>
    </div>
    <div class="flex items-center gap-2 text-sm">
      <i class="fas fa-bolt" style="color: var(--comic-yellow-dark);"></i>
      <span style="font-family: var(--font-body); font-weight: 700;">Repository Pattern</span>
    </div>
    <div class="flex items-center gap-2 text-sm">
      <i class="fas fa-bolt" style="color: var(--comic-yellow-dark);"></i>
      <span style="font-family: var(--font-body); font-weight: 700;">API Versioning</span>
    </div>
  </div>

  <!-- GitHub -->
  <a href="https://github.com/gjohnn/base_projects_dotnet8.git" target="_blank" rel="noopener noreferrer"
     class="btn btn-primary w-full justify-center">
    <i class="fab fa-github mr-2"></i>
    View on GitHub
  </a>
</section>

<script>
  const dotnetBtn = document.getElementById('copy-dotnet-btn');
  if (dotnetBtn) {
    dotnetBtn.addEventListener('click', async () => {
      const cmd = dotnetBtn.getAttribute('data-command') || '';
      try {
        await navigator.clipboard.writeText(cmd);
        const icon = dotnetBtn.querySelector('i');
        if (icon) { icon.className = 'fas fa-check'; }
        setTimeout(() => {
          if (icon) { icon.className = 'fas fa-copy'; }
        }, 2000);
      } catch (err) {
        console.error('Copy failed', err);
      }
    });
  }
</script>
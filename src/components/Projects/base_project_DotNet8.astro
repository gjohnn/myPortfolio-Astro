---
import "../../styles/global.css";
---

<article
  class="flex flex-col items-center p-5 justify-center w-full max-w-3xl mx-auto text-center"
>
  <div
    class="border-4 border-blue-500 rounded-xl p-8 flex flex-col items-center w-full mb-8 bg-gray-800/50 backdrop-blur-sm"
  >
    <div
      class="flex flex-col items-center w-full md:flex-row md:justify-center gap-8"
    >
      <div class="text-container w-full md:w-1/2">
        <h3 class="text-2xl font-bold mb-4 text-blue-400">
          .NET Core API Project
        </h3>
        <ul class="flex flex-wrap justify-center gap-2 mb-6">
          <li class="px-3 py-1 bg-gray-700 rounded-full text-gray-200">
            C# 12
          </li>
          <li class="px-3 py-1 bg-gray-700 rounded-full text-gray-200">
            .NET 8
          </li>
          <li class="px-3 py-1 bg-gray-700 rounded-full text-gray-200">
            Entity Framework Core
          </li>
          <li class="px-3 py-1 bg-gray-700 rounded-full text-gray-200">
            PostgreSQL 17
          </li>
          <li class="px-3 py-1 bg-gray-700 rounded-full text-gray-200">
            JWT Auth
          </li>
        </ul>

        <div class="flex flex-wrap justify-center items-center gap-4 my-6">
          <img
            class="w-8 h-8 invert opacity-80"
            src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/csharp.svg"
            alt="C#"
          />

          <img
            class="w-8 h-8 invert opacity-80"
            src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/dotnet.svg"
            alt=".NET"
          />
          <img
            class="w-8 h-8 invert opacity-80"
            src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/postgresql.svg"
            alt="PostgreSQL"
          />
          <img
            class="w-8 h-8 invert opacity-80"
            src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/jsonwebtokens.svg"
            alt="JWT"
          />
        </div>

        <a
          href="https://github.com/gjohnn/base_projects_dotnet8.git"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-white hover:bg-gray-100 text-black font-medium px-6 py-3 rounded-lg border border-black transition"
        >
          REPOSITORY LINK
        </a>
      </div>
    </div>
  </div>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const buttons = document.querySelectorAll("[data-copy-btn]");
      const textareas = document.querySelectorAll("[data-json-copy]");

      buttons.forEach((btn, index) => {
        btn.addEventListener("click", async () => {
          try {
            const content = textareas[index].value;
            await navigator.clipboard.writeText(content);
            const originalText = btn.textContent;
            btn.textContent = "Copied!";
            btn.classList.replace("bg-blue-600", "bg-green-600");

            setTimeout(() => {
              btn.textContent = originalText;
              btn.classList.replace("bg-green-600", "bg-blue-600");
            }, 2000);
          } catch (err) {
            console.error("Clipboard error:", err);
            btn.textContent = "Error";
            btn.classList.replace("bg-blue-600", "bg-red-600");
          }
        });
      });
    });
  </script>
</article>

<style>
  header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: black;
    color: yellow;
    padding: 10px 20px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
  }

  ul {
    display: flex;
    gap: 16px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    color: yellow;
    text-decoration: none;
    transition: 0.3s;
  }

  a:hover {
    color: white;
  }
</style>

<header>
  <nav>
    <ul>
      <li><a style="font-weight: bold;" href="/">Home</a></li>
      <li><a style="font-weight: bold;" href="/projects">Projects</a></li>
      <li><a style="font-weight: bold;" href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>

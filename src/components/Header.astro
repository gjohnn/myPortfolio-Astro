---
  // src/components/Header.astro
  import "../styles/global.css";
---

<header class="fixed top-0 w-full bg-black text-yellow-500 py-5 shadow-lg z-50">
  <nav class="flex justify-between items-center px-4">
    <div class="text-lg font-bold">Juan Guerrero</div>
    <!-- Hamburger button (only visible below 768px) -->
    <div class="block lg:hidden">
      <button id="hamburger" class="text-yellow-500 hover:text-white focus:outline-none">
        <svg id="hamburgerIcon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path id="hamburgerPath" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    <!-- Navigation menu (hidden in mobile and shown in larger screens) -->
    <div class="hidden lg:flex">
      <ul class="flex justify-center flex-wrap gap-5 list-none p-0 m-0">
        <li><a class="font-bold text-lg hover:text-white" href="/">Home</a></li>
        <li><a class="font-bold text-lg hover:text-white" href="/projects">Projects</a></li>
        <li><a class="font-bold text-lg hover:text-white" href="/experience">Experience</a></li>
        <li><a class="font-bold text-lg hover:text-white" href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>

  <!-- Dropdown menu for mobile (only visible below 768px) with transparency -->
  <div id="dropdownMenu" class="lg:hidden hidden bg-black bg-opacity-70 text-yellow-500 py-3 absolute w-full left-0 top-full">
    <ul class="flex flex-col items-center gap-5">
      <li><a class="font-bold text-lg hover:text-white" href="/">Home</a></li>
      <li><a class="font-bold text-lg hover:text-white" href="/projects">Projects</a></li>
      <li><a class="font-bold text-lg hover:text-white" href="/experience">Experience</a></li>
      <li><a class="font-bold text-lg hover:text-white" href="/contact">Contact</a></li>
    </ul>
  </div>
</header>

<script>
  const hamburgerButton = document.getElementById('hamburger');
  const dropdownMenu = document.getElementById('dropdownMenu');
  const hamburgerIcon = document.getElementById('hamburgerIcon');
  const hamburgerPath = document.getElementById('hamburgerPath');

  hamburgerButton.addEventListener('click', () => {
    dropdownMenu.classList.toggle('hidden');
    
    // Toggle hamburger and X icon
    if (dropdownMenu.classList.contains('hidden')) {
      hamburgerPath.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger
    } else {
      hamburgerPath.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // X
    }
  });
</script>

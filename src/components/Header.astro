<style>
  header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: black;
    color: yellow;
    padding-top: 20px;
    padding-bottom: 5px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    margin: 0;
    z-index: 1000;
  }

  nav {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  ul {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    font-size: 20px;
    color: yellow;
    text-decoration: none;
    transition: 0.3s;
  }

  a:hover {
    color: white;
    color: white;
  }
</style>


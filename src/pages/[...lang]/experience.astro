---
import MainLayout from "../../layouts/MainLayout.astro";
import ExperienceWork from "../../components/Myself-Info/ExperienceComponent.astro";
import { getLangFromUrl, t, localePath } from "../../i18n/utils";
import type { Lang } from "../../i18n/ui";

export function getStaticPaths() {
  return [
    { params: { lang: undefined } },
    { params: { lang: 'en' } },
  ];
}

const lang = getLangFromUrl(Astro.url) as Lang;
---

<MainLayout lang={lang}>
  <div class="relative max-w-6xl mx-auto">
    <!-- Page Header -->
    <section class="text-center mb-12 mt-12 sm:mb-16 animate-on-scroll px-4">
      <h1 class="comic-title text-4xl sm:text-5xl md:text-6xl mb-4" style="color: var(--comic-blue);">
        {t('exp.title', lang)}
      </h1>
      <p class="text-base sm:text-lg max-w-3xl mx-auto leading-relaxed" 
         style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
        {t('exp.subtitle', lang)}
      </p>
      <div class="mt-4 w-24 h-1.5 rounded-full mx-auto" style="background: var(--comic-blue);"></div>
    </section>

    <!-- Experience Content -->
    <section class="animate-on-scroll px-4">
      <ExperienceWork lang={lang} />
    </section>

    <!-- CTA -->
    <section class="text-center mt-12 sm:mt-16 animate-on-scroll flex justify-center px-4">
      <div class="card p-6 sm:p-8 max-w-2xl mx-auto" style="border-color: var(--comic-blue); border-width: 3px;">
        <div class="comic-action inline-block mb-3" style="font-size: 0.7rem;">{t('exp.impressed', lang)}</div>
        <h2 class="comic-title text-xl sm:text-2xl mb-4" style="color: var(--comic-blue);">
          {t('exp.interestedTitle', lang)}
        </h2>
        <p class="mb-6" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
          {t('exp.interestedDesc', lang)}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/JuanGuerreroCv_Public.pdf" download="Juan_SebastiÃ¡n_Guerrero_Britos_CV.pdf"
             class="btn btn-primary group">
            <i class="fas fa-download mr-2"></i>
            {t('exp.downloadFull', lang)}
          </a>
          <a href={localePath('/contact', lang)} class="btn btn-secondary group">
            <i class="fas fa-envelope mr-2"></i>
            {t('exp.getInTouch', lang)}
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

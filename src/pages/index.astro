---
import MainLayout from "../layouts/MainLayout.astro";
import EducationComponent from "../components/Myself-Info//EducationComponent.astro";
---

<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    max-width: 1200px; /* Evita que el contenido sea demasiado ancho */
    width: 90%;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .intro {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap; /* Permite que los elementos se acomoden en pantallas pequeÃ±as */
    justify-content: center;
    align-items: center;
    gap: 20px;
    max-width: 900px;
  }

  .intro > article {
    flex: 1;
    min-width: 300px;
    max-width: 600px;
  }

  .intro > article > p {
    width: 100%;
    max-width: 600px; /* Evita que el texto se haga demasiado ancho */
  }

  .welcome > P {
    text-align: left;
  }

  .about > p {
    text-align: right;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
    width: 100%;
    max-width: 800px; /* Limita el ancho de la lista de skills */
  }

  .skills-list > li {
    padding: 0.5rem;
    border: solid yellow 2px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: 250px; /* Controla el ancho de cada skill */
  }

  @media screen and (max-width: 768px) {
    .skills-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      width: 100%;
      max-width: 800px; /* Limita el ancho de la lista de skills */
    }
    .intro {
      flex-direction: column;
    }

    .intro > article {
      max-width: 100%;
    }

    .skills-list {
      display: flex;
      justify-content: center;
      align-items: center;
      max-width: 100%;
    }

    .welcome > P {
      text-align: center;
    }

    .about > p {
      text-align: center;
    }
  }

  @media screen and (max-width: 480px) {
    main {
      width: 95%;
      padding: 0 0.5rem;
    }

    .intro > article > p {
      font-size: 0.9rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 1.5rem;
    }
  }

</style>


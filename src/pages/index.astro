---
import MainLayout from "../layouts/MainLayout.astro";
import EducationComponent from "../components/Myself-Info/EducationComponent.astro";
import Carrusel from "../components/Carrusel.astro";
---

<MainLayout>
    <main
        class="flex flex-col items-center justify-center max-w-6xl w-full mx-auto px-4 py-8"
    >
        <!-- Hero Section -->
        <section class="w-full mb-12 text-center">
            <h1
                class="text-5xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-red-400"
            >
                Juan Guerrero
            </h1>

            <h2 class="text-2xl font-semibold mb-8 text-gray-300">
                Software Developer
            </h2>

            <div class="flex flex-col items-center gap-6 max-w-3xl mx-auto">
                <article class="w-full">
                    <p
                        class="text-lg text-center text-gray-300 leading-relaxed"
                    >
                        Hi, I'm <strong class="text-red-300"
                            >Juan Guerrero</strong
                        >, a passionate backend developer specialized in <strong
                            class="text-red-300"
                            >C#, JS/TS,
                        </strong> and <strong class="text-red-300"
                            >Docker</strong
                        > to build scalable systems.
                    </p>
                </article>
                <article class="w-full">
                    <p
                        class="text-lg text-center text-gray-300 leading-relaxed"
                    >
                        I design server-side solutions with expertise in
                        microservices, REST APIs, and cloud technologies,
                        focused on security and performance.
                    </p>
                </article>
            </div>
        </section>

        <!-- Skills Section -->
        <section class="skills mt-12 w-full">
            <h2 class="text-3xl font-bold mb-8 relative inline-block">
                <span
                    class="relative z-10 px-4 bg-gradient-to-r from-red-500 to-red-300 bg-clip-text text-transparent"
                    >My Skills</span
                >
                <span
                    class="absolute bottom-0 left-0 w-full h-1 bg-orange-500/30 rounded-full"
                ></span>
            </h2>

            <!-- Carousel of Skills (destacadas) -->
            <div class="m-0 w-full max-w-4xl mx-auto">
                <Carrusel />
            </div>

            <EducationComponent />
        </section>
    </main>
</MainLayout>

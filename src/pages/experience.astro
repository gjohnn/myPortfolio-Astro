---
import MainLayout from "../layouts/MainLayout.astro";
import ExperienceWork from "../components/Myself-Info/ExperienceComponent.astro";
---

<MainLayout>
    <div class="relative">
        <!-- Page Header -->
        <section class="text-center mb-16 animate-on-scroll">
            <div class="relative inline-block">
                <h1 class="text-5xl md:text-6xl font-bold mb-4 gradient-text pb-3 pt-4">
                    Professional Experience
                </h1>
                <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-32 h-1 bg-gradient-to-r from-red-500 to-red-600 rounded-full"></div>
            </div>
            <p class="text-xl text-gray-400 mt-8 max-w-3xl mx-auto leading-relaxed">
                A journey through my professional career, showcasing the roles, responsibilities, 
                and achievements that have shaped my expertise in software development.
            </p>
        </section>

        <!-- Experience Content -->
        <section class="animate-on-scroll">
            <ExperienceWork />
        </section>

        <!-- Call to Action -->
        <section class="text-center mt-16 animate-on-scroll">
            <div class="card p-8 max-w-2xl mx-auto">
                <h2 class="text-2xl font-bold mb-4 text-white">
                    Interested in My Background?
                </h2>
                <p class="text-gray-400 mb-6">
                    Download my complete resume for detailed information about my experience, 
                    skills, and accomplishments.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/Juan_Sebastián_Guerrero_Britos.pdf"
                        download="Juan_Sebastián_Guerrero_Britos_CV.pdf"
                        class="btn btn-primary group"
                    >
                        <i class="fas fa-download mr-2 group-hover:animate-bounce"></i>
                        Download Full Resume
                    </a>
                    <a
                        href="/contact"
                        class="btn btn-secondary group"
                    >
                        <i class="fas fa-envelope mr-2 group-hover:animate-bounce"></i>
                        Get In Touch
                    </a>
                </div>
            </div>
        </section>
    </div>
</MainLayout>

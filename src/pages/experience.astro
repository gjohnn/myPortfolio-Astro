---
import MainLayout from "../layouts/MainLayout.astro";
import ExperienceWork from "../components/Myself-Info/ExperienceComponent.astro";
---

<MainLayout>
  <div class="relative max-w-6xl mx-auto">
    <!-- Page Header -->
    <section class="text-center mb-12 mt-8 sm:mb-16 animate-on-scroll px-4">
      <h1 class="comic-title text-4xl sm:text-5xl md:text-6xl mb-4" style="color: var(--comic-blue);">
        Professional Experience
      </h1>
      <p class="text-base sm:text-lg max-w-3xl mx-auto leading-relaxed" 
         style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
        A journey through my professional career, showcasing the roles, responsibilities, 
        and achievements that have shaped my expertise in software development.
      </p>
      <div class="mt-4 w-24 h-1.5 rounded-full mx-auto" style="background: var(--comic-blue);"></div>
    </section>

    <!-- Experience Content -->
    <section class="animate-on-scroll px-4">
      <ExperienceWork />
    </section>

    <!-- CTA -->
    <section class="text-center mt-8 sm:mt-16 animate-on-scroll flex justify-center px-4">
      <div class="card p-6 sm:p-8 max-w-2xl mx-auto" style="border-color: var(--comic-blue); border-width: 3px;">
        <div class="comic-action inline-block mb-3" style="font-size: 0.7rem;">Impressed?</div>
        <h2 class="comic-title text-xl sm:text-2xl mb-4" style="color: var(--comic-blue);">
          Interested in My Background?
        </h2>
        <p class="mb-6" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
          Download my complete resume for detailed information about my experience, 
          skills, and accomplishments.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/JuanGuerreroCv_Public.pdf" download="Juan_SebastiÃ¡n_Guerrero_Britos_CV.pdf"
             class="btn btn-primary group">
            <i class="fas fa-download mr-2"></i>
            Download Full Resume
          </a>
          <a href="/contact" class="btn btn-secondary group">
            <i class="fas fa-envelope mr-2"></i>
            Get In Touch
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
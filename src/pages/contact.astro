---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="relative max-w-5xl mx-auto">
    <!-- Page Header -->
    <section class="text-center mb-12 sm:mb-16 animate-on-scroll px-4">
      <h1 class="comic-title text-4xl mt-8 sm:text-5xl md:text-6xl mb-4" style="color: var(--comic-green);">
        Let's Connect
      </h1>
      <p class="text-base sm:text-lg max-w-3xl mx-auto leading-relaxed" 
         style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
        I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
      </p>
      <div class="mt-4 w-20 h-1.5 rounded-full mx-auto" style="background: var(--comic-green);"></div>
    </section>

    <!-- Contact Methods -->
    <section class="max-w-4xl mx-auto animate-on-scroll px-4">
      <div class="grid md:grid-cols-2 gap-6 sm:gap-8 mb-12 sm:mb-16">
        <!-- Quick Contact -->
        <div class="card p-6 sm:p-8" style="border-top: 4px solid var(--comic-red);">
          <h2 class="comic-title text-xl sm:text-2xl mb-6 flex items-center" style="color: var(--comic-red);">
            <i class="fas fa-paper-plane mr-3" style="color: var(--comic-red);"></i>
            Quick Contact
          </h2>
          
          <div class="space-y-4">
            <!-- Email -->
            <a href="mailto:juansgb316@outlook.com" 
               class="flex items-center gap-4 p-4 rounded-lg group transition-all duration-200"
               style="background: var(--comic-cream); border: 2px solid var(--comic-black);">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg flex items-center justify-center"
                   style="background: var(--comic-red); border: 2px solid var(--comic-black); box-shadow: 2px 2px 0 var(--comic-black);">
                <i class="fas fa-envelope text-white text-lg"></i>
              </div>
              <div>
                <div style="font-family: var(--font-comic); color: var(--comic-black); letter-spacing: 0.5px;">Email</div>
                <div class="text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">juansgb316@outlook.com</div>
              </div>
            </a>
            
            <!-- Copy Email Button -->
            <button id="copyEmailBtn" 
                    class="w-full p-3 rounded-lg transition-all duration-200 text-sm cursor-pointer"
                    style="background: var(--comic-cream); border: 2px dashed var(--comic-black); font-family: var(--font-accent); color: var(--comic-black); letter-spacing: 0.5px;"
                    onclick="copyEmailToClipboard()">
              <i id="copyEmailIcon" class="fas fa-copy mr-2"></i>
              <span id="copyEmailText">Copy Email Address</span>
            </button>

            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/in/juan-guerre3168" target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-4 p-4 rounded-lg group transition-all duration-200"
               style="background: var(--comic-cream); border: 2px solid var(--comic-black);">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg flex items-center justify-center"
                   style="background: var(--comic-blue); border: 2px solid var(--comic-black); box-shadow: 2px 2px 0 var(--comic-black);">
                <i class="fab fa-linkedin text-white text-lg"></i>
              </div>
              <div class="flex-1">
                <div style="font-family: var(--font-comic); color: var(--comic-black); letter-spacing: 0.5px;">LinkedIn</div>
                <div class="text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">Professional Profile</div>
              </div>
              <i class="fas fa-external-link-alt" style="color: var(--comic-blue);"></i>
            </a>

            <!-- GitHub -->
            <a href="https://github.com/gjohnn" target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-4 p-4 rounded-lg group transition-all duration-200"
               style="background: var(--comic-cream); border: 2px solid var(--comic-black);">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg flex items-center justify-center"
                   style="background: var(--comic-black); border: 2px solid var(--comic-black); box-shadow: 2px 2px 0 var(--comic-black);">
                <i class="fab fa-github text-white text-lg"></i>
              </div>
              <div class="flex-1">
                <div style="font-family: var(--font-comic); color: var(--comic-black); letter-spacing: 0.5px;">GitHub</div>
                <div class="text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">View My Code</div>
              </div>
              <i class="fas fa-external-link-alt" style="color: var(--gray-500);"></i>
            </a>
          </div>
        </div>

        <!-- Let's Discuss -->
        <div class="card p-6 sm:p-8" style="border-top: 4px solid var(--comic-purple);">
          <h2 class="comic-title text-xl sm:text-2xl mb-6 flex items-center" style="color: var(--comic-purple);">
            <i class="fas fa-info-circle mr-3" style="color: var(--comic-purple);"></i>
            Let's Discuss
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center mt-1"
                   style="background: var(--comic-green); border: 2px solid var(--comic-black); box-shadow: 2px 2px 0 var(--comic-black);">
                <i class="fas fa-handshake text-white text-sm"></i>
              </div>
              <div>
                <h3 style="font-family: var(--font-comic); color: var(--comic-black); letter-spacing: 0.5px; margin-bottom: 0.25rem;">Project Collaboration</h3>
                <p class="text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">Looking for a backend developer for your next project? Let's talk about how I can help bring your ideas to life.</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center mt-1"
                   style="background: var(--comic-blue); border: 2px solid var(--comic-black); box-shadow: 2px 2px 0 var(--comic-black);">
                <i class="fas fa-briefcase text-white text-sm"></i>
              </div>
              <div>
                <h3 style="font-family: var(--font-comic); color: var(--comic-black); letter-spacing: 0.5px; margin-bottom: 0.25rem;">Job Opportunities</h3>
                <p class="text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">Interested in full-time or freelance opportunities in backend development, APIs, and cloud solutions.</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center mt-1"
                   style="background: var(--comic-purple); border: 2px solid var(--comic-black); box-shadow: 2px 2px 0 var(--comic-black);">
                <i class="fas fa-comments text-white text-sm"></i>
              </div>
              <div>
                <h3 style="font-family: var(--font-comic); color: var(--comic-black); letter-spacing: 0.5px; margin-bottom: 0.25rem;">Technical Discussion</h3>
                <p class="text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">Always excited to discuss technology, share knowledge, and learn from fellow developers.</p>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-4" style="border-top: 2px dashed var(--gray-300);">
            <p class="text-sm text-center" style="font-family: var(--font-accent); color: var(--gray-500);">
              <i class="fas fa-clock mr-2"></i>
              Usually responds within 24 hours
            </p>
          </div>
        </div>
      </div>

      <!-- Bottom CTA -->
      <div class="flex justify-center animate-on-scroll">
        <div class="card p-6 sm:p-8 w-full max-w-2xl text-center" style="border-color: var(--comic-green); border-width: 3px;">
          <div class="comic-action inline-block mb-3" style="font-size: 0.7rem;">Let's go!</div>
          <h2 class="comic-title text-xl sm:text-2xl mb-4" style="color: var(--comic-green);">
            Ready to Start Something Great?
          </h2>
          <p class="mb-6" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
            Whether you have a specific project in mind or just want to explore possibilities, 
            I'm here to help turn your vision into reality.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="mailto:juansgb316@outlook.com" class="btn btn-primary group">
              <i class="fas fa-envelope mr-2"></i>
              Send me an Email
            </a>
            <a href="/JuanGuerreroCv_Public.pdf" download="Juan_SebastiÃ¡n_Guerrero_Britos_CV.pdf"
               class="btn btn-secondary group">
              <i class="fas fa-download mr-2"></i>
              Download Resume
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script is:inline>
    function copyEmailToClipboard() {
      const email = 'juansgb316@outlook.com';
      navigator.clipboard.writeText(email).then(() => {
        const text = document.getElementById('copyEmailText');
        const icon = document.getElementById('copyEmailIcon');
        
        text.textContent = 'Email Copied!';
        icon.className = 'fas fa-check mr-2';
        
        setTimeout(() => {
          text.textContent = 'Copy Email Address';
          icon.className = 'fas fa-copy mr-2';
        }, 3000);
      }).catch(err => {
        console.error('Failed to copy email: ', err);
        const text = document.getElementById('copyEmailText');
        text.textContent = 'Copy failed - try again';
        setTimeout(() => {
          text.textContent = 'Copy Email Address';
        }, 2000);
      });
    }
  </script>
</MainLayout>
---
// src/pages/contact.astro
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="max-w-2xl mx-auto py-16 px-6 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-yellow-400 to-yellow-600 bg-clip-text text-transparent">
      Let's Connect
    </h1>
    
    <p class="text-lg md:text-xl text-gray-300 mb-10 leading-relaxed">
      I'm always open to discussing new projects, creative ideas or opportunities to be part of your vision.
      Feel free to reach out for collaborations, job opportunities, or just a chat about technology.
    </p>

    <div class="flex flex-col items-center gap-4 w-full max-w-xs mx-auto">
      <!-- Email Section -->
      <div class="w-full">
        <!-- Email Link -->
        <a 
          href="mailto:juansgb316@outlook.com" 
          class="flex items-center justify-center gap-3 w-full p-4 bg-gray-800 hover:bg-yellow-500 text-yellow-400 hover:text-gray-900 rounded-lg transition-all duration-300 border border-yellow-500/30 hover:border-yellow-500 mb-2"
        >
        <svg class="w-6 h-6 invert opacity-80" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>Mail.Ru</title><path d="M15.61 12c0 1.99-1.62 3.61-3.61 3.61-1.99 0-3.61-1.62-3.61-3.61 0-1.99 1.62-3.61 3.61-3.61 1.99 0 3.61 1.62 3.61 3.61M12 0C5.383 0 0 5.383 0 12s5.383 12 12 12c2.424 0 4.761-.722 6.76-2.087l.034-.024-1.617-1.879-.027.017A9.494 9.494 0 0 1 12 21.54c-5.26 0-9.54-4.28-9.54-9.54 0-5.26 4.28-9.54 9.54-9.54 5.26 0 9.54 4.28 9.54 9.54a9.63 9.63 0 0 1-.225 2.05c-.301 1.239-1.169 1.618-1.82 1.568-.654-.053-1.42-.52-1.426-1.661V12A6.076 6.076 0 0 0 12 5.93 6.076 6.076 0 0 0 5.93 12 6.076 6.076 0 0 0 12 18.07a6.02 6.02 0 0 0 4.3-1.792 3.9 3.9 0 0 0 3.32 1.805c.874 0 1.74-.292 2.437-.821.719-.547 1.256-1.336 1.553-2.285.047-.154.135-.504.135-.507l.002-.013c.175-.76.253-1.52.253-2.457 0-6.617-5.383-12-12-12"/></svg>          <span class="font-medium">Email</span>
        </a>
        
        <!-- Copy Email Button -->
        <button 
          id="copyEmailBtn"
          class="flex items-center justify-center gap-2 w-full p-3 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg transition-all duration-300 text-sm"
          onclick="copyEmailToClipboard()"
        >
          <span id="copyEmailText">Copy Email Address</span>
          <span id="copyEmailIcon">ðŸ“‹</span>
        </button>
      </div>

      <!-- LinkedIn -->
      <a 
        href="https://www.linkedin.com/in/juan-guerre3168" 
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-3 w-full p-4 bg-gray-800 hover:bg-[#0A66C2] text-[#0A66C2] hover:text-white rounded-lg transition-all duration-300 border border-[#0A66C2]/30 hover:border-[#0A66C2]"
      >
      <img class="w-6 h-6 invert opacity-80" src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/linkedin.svg" alt="LinkedIn">        <span class="font-medium">LinkedIn</span>
      </a>

      <!-- GitHub -->
      <a 
        href="https://github.com/gjohnn" 
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-3 w-full p-4 bg-gray-800 hover:bg-gray-700 text-gray-300 hover:text-white rounded-lg transition-all duration-300 border border-gray-600/30 hover:border-gray-500"
      >
      <img class="w-6 h-6 invert opacity-80" src="https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/github.svg" alt="Linux" srcset="">
        <span class="font-medium">GitHub</span>
      </a>
    </div>
  </section>

  <script is:inline>
    function copyEmailToClipboard() {
      const email = 'juansgb316@outlook.com';
      navigator.clipboard.writeText(email).then(() => {
        const btn = document.getElementById('copyEmailBtn');
        const text = document.getElementById('copyEmailText');
        const icon = document.getElementById('copyEmailIcon');
        
        // Feedback visual
        text.textContent = 'Copied!';
        icon.textContent = 'âœ“';
        btn.classList.add('bg-green-600', 'text-white');
        btn.classList.remove('bg-gray-700', 'hover:bg-gray-600', 'text-gray-300');
        
        // Reset after 2 seconds
        setTimeout(() => {
          text.textContent = 'Copy Email Address';
          icon.textContent = 'ðŸ“‹';
          btn.classList.remove('bg-green-600', 'text-white');
          btn.classList.add('bg-gray-700', 'hover:bg-gray-600', 'text-gray-300');
        }, 2000);
      }).catch(err => {
        console.error('Failed to copy email: ', err);
      });
    }
  </script>
</MainLayout>
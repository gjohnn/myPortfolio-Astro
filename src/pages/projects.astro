---
import BaseProject from "../components/Projects/base_project_DotNet8.astro";
import AppInstaller from "../components/Projects/AppInstaller.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="relative">
    <!-- Page Header -->
    <section class="text-center mb-16 animate-on-scroll">
      <div class="relative inline-block ">
        <h1 class="text-5xl md:text-6xl font-bold mb- gradient-text pb-4 pt-4">
          My Projects
        </h1>
        <div
          class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-red-500 to-red-600 rounded-full mt-2"
        >
        </div>
      </div>
      <p class="text-xl text-gray-400 mt-8 max-w-3xl mx-auto leading-relaxed">
        A showcase of my technical skills through real-world applications,
        demonstrating expertise in backend development, APIs, and modern
        technologies.
      </p>
    </section>

    <!-- Featured Projects -->
    <section class="space-y-12 animate-on-scroll">
      <div class="grid gap-8">
        <BaseProject />
        <AppInstaller />
        <!-- Add more project components here -->
      </div>
    </section>

    <!-- Skills Highlight -->
    <section class="mt-16 animate-on-scroll">
      <div class="card p-8 text-center">
        <h2 class="text-2xl font-bold mb-6 text-white">
          Technologies Used Across Projects
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
          <span
            class="px-4 py-2 bg-gradient-to-r from-blue-500/20 to-blue-600/20 text-blue-400 rounded-lg border border-blue-500/30"
          >
            C# / .NET
          </span>
          <span
            class="px-4 py-2 bg-gradient-to-r from-yellow-500/20 to-yellow-600/20 text-yellow-400 rounded-lg border border-yellow-500/30"
          >
            JavaScript / TypeScript
          </span>
          <span
            class="px-4 py-2 bg-gradient-to-r from-blue-400/20 to-blue-500/20 text-blue-300 rounded-lg border border-blue-400/30"
          >
            Docker
          </span>
          <span
            class="px-4 py-2 bg-gradient-to-r from-green-500/20 to-green-600/20 text-green-400 rounded-lg border border-green-500/30"
          >
            REST APIs
          </span>
          <span
            class="px-4 py-2 bg-gradient-to-r from-purple-500/20 to-purple-600/20 text-purple-400 rounded-lg border border-purple-500/30"
          >
            Microservices
          </span>
          <span
            class="px-4 py-2 bg-gradient-to-r from-red-500/20 to-red-600/20 text-red-400 rounded-lg border border-red-500/30"
          >
            Cloud Technologies
          </span>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center mt-16 animate-on-scroll">
      <div class="card p-8 max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold mb-4 text-white">Want to See More?</h2>
        <p class="text-gray-400 mb-6">
          These are just a few examples of my work. I'm always working on new
          projects and exploring cutting-edge technologies.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://github.com/gjohnn"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary group"
          >
            <i class="fab fa-github mr-2 group-hover:animate-bounce"></i>
            View on GitHub
          </a>
          <a href="/contact" class="btn btn-secondary group">
            <i class="fas fa-handshake mr-2 group-hover:animate-bounce"></i>
            Let's Collaborate
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

---
import ProjectCard from "../components/Projects/ProjectCard.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { projects } from "../data/projects";
---

<MainLayout>
    <div class="relative max-w-6xl mx-auto">
        <!-- Page Header -->
        <section class="text-center mb-8 sm:mb-12 px-4">
            <div class="relative inline-block">
                <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-2 gradient-text pb-4 pt-4">
                    Projects
                </h1>
                <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-16 sm:w-20 h-1 bg-gradient-to-r from-red-500 to-red-600 rounded-full"></div>
            </div>
            <p class="text-sm sm:text-base text-gray-400 mt-6 max-w-2xl mx-auto">
                Backend development, APIs, and automation solutions
            </p>
        </section>

        <!-- Projects Grid -->
        <section class="px-4 mb-8 sm:mb-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
                {projects.map(project => (
                    <ProjectCard {...project} />
                ))}
            </div>
        </section>

        <!-- Call to Action -->
        <section class="flex justify-center px-4">
            <div class="card p-6 max-w-xl w-full text-center">
                <p class="text-gray-300 mb-4 text-sm">
                    More projects and ongoing work on GitHub
                </p>
                <div class="flex flex-col sm:flex-row gap-3 justify-center">
                    <a
                        href="https://github.com/gjohnn"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-primary"
                    >
                        <i class="fab fa-github mr-2"></i>
                        View GitHub
                    </a>
                    <a href="/contact" class="btn btn-secondary">
                        <i class="fas fa-envelope mr-2"></i>
                        Get in Touch
                    </a>
                </div>
            </div>
        </section>
    </div>
</MainLayout>

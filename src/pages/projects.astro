---
import ProjectCard from "../components/Projects/ProjectCard.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { projects } from "../data/projects";
---

<MainLayout>
  <div class="relative max-w-6xl mx-auto">
    <!-- Page Header -->
    <section class="text-center mb-8  sm:mb-12 px-4">
      <h1 class="comic-title text-4xl sm:text-5xl mt-8 md:text-6xl mb-4" style="color: var(--comic-orange);">
        Projects
      </h1>
      <p class="text-sm sm:text-base max-w-2xl mx-auto" 
         style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
        Backend development, APIs, and automation solutions
      </p>
      <div class="mt-4 w-20 h-1.5 rounded-full mx-auto" style="background: var(--comic-orange);"></div>
    </section>

    <!-- Projects Grid -->
    <section class="px-4 mb-8 sm:mb-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
        {projects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>
    </section>

    <!-- CTA -->
    <section class="flex justify-center px-4">
      <div class="card p-6 sm:p-8 max-w-xl w-full text-center" style="border-color: var(--comic-orange); border-width: 3px;">
        <div class="comic-action inline-block mb-3" style="font-size: 0.7rem;">Want more?</div>
        <p class="mb-4 text-sm" style="font-family: var(--font-body); color: var(--gray-600); font-weight: 700;">
          More projects and ongoing work on GitHub
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a href="https://github.com/gjohnn" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            <i class="fab fa-github mr-2"></i>
            View GitHub
          </a>
          <a href="/contact" class="btn btn-secondary">
            <i class="fas fa-envelope mr-2"></i>
            Get in Touch
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
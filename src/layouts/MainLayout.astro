---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/fav.png" />
    <title>Portfolio - g__john</title>
    <style>
      body {
        display: grid;
        grid-template-rows: auto 1fr auto; /* Define filas para el encabezado, contenido principal y pie de página */
        min-height: 100vh; /* Asegura que la cuadrícula ocupe al menos la altura de la ventana */
        margin: 0;
        color: white;
        font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
          "Lucida Sans", Arial, sans-serif;
        background-color: black;
      }

      header {
        position: fixed;
        top: 0;
        width: 100%;
        background-color: black;
        color: yellow;
        padding-top: 20px;
        padding-bottom: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 1000; /* Asegura que el encabezado esté por encima de otros elementos */
      }

      main {
        margin-top: 80px; /* Ajusta este valor según la altura de tu encabezado */
        padding: 0 15px;
      }

      footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 10px 0;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="max-w-4xl mx-auto p-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>

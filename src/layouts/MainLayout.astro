---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { t, localePath } from "../i18n/utils";
import { defaultLang, type Lang } from "../i18n/ui";

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={t('meta.description', lang)} />
    <meta name="keywords" content="software developer, backend, C#, JavaScript, TypeScript, Docker, APIs, Juan Sebastián Guerrero Britos" />
    <meta name="author" content="Juan Sebastián Guerrero Britos" />
    
    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
    <link rel="preconnect" href="https://unpkg.com" />
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web@2.1.1/src/duotone/style.css" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <title>{t('meta.title', lang)}</title>
  </head>
  <body
    class="page-container min-h-screen text-[var(--comic-black)] flex flex-col relative overflow-x-hidden"
    style="background-color: var(--comic-cream); font-family: var(--font-body);"
  >
    <!-- Comic Background: Ben-Day dots pattern -->
    <div class="fixed inset-0 pointer-events-none halftone-bg"></div>
    
    <!-- Decorative speed lines behind hero -->
    <div class="fixed inset-0 pointer-events-none speed-lines opacity-50"></div>

    <!-- Decorative corner triangles -->
    <div class="fixed top-0 right-0 w-0 h-0 pointer-events-none" 
         style="border-left: 100px solid transparent; border-top: 100px solid var(--comic-red); opacity: 0.08;"></div>
    <div class="fixed bottom-0 left-0 w-0 h-0 pointer-events-none" 
         style="border-right: 100px solid transparent; border-bottom: 100px solid var(--comic-blue); opacity: 0.08;"></div>

    <Header lang={lang} />

    <main class="flex-1 w-full mx-auto container-mobile py-4 sm:py-6 lg:py-8 pt-16 sm:pt-18 lg:pt-20 relative z-10 max-w-7xl">
      <div class="min-h-full">
        <slot />
      </div>

      <!-- Comic Mobile Navigation -->
      <nav
        class="md:hidden fixed bottom-4 sm:bottom-6 left-1/2 transform -translate-x-1/2 z-50 mobile-nav"
        aria-label="Mobile Navigation"
      >
        <div class="rounded-xl p-1 sm:p-2" style="background: var(--comic-white); border: 3px solid var(--comic-black); box-shadow: 4px 4px 0 var(--comic-black);">
          <div class="flex items-center gap-0.5 sm:gap-1">
            <a
              href={localePath('/', lang)}
              class="flex flex-col items-center justify-center px-2 sm:px-4 py-2 sm:py-3 transition-all duration-200 rounded-lg group min-w-[44px]"
              style="color: var(--comic-black);"
              aria-label={t('nav.home', lang)}
            >
              <i class="fas fa-home text-base sm:text-lg group-hover:scale-125 transition-transform" style="color: var(--comic-red);"></i>
              <span class="text-xs mt-0.5 sm:mt-1 font-bold hidden xs:block" style="font-family: var(--font-comic);">{t('nav.mobile.home', lang)}</span>
            </a>

            <a
              href={localePath('/experience', lang)}
              class="flex flex-col items-center justify-center px-2 sm:px-4 py-2 sm:py-3 transition-all duration-200 rounded-lg group min-w-[44px]"
              style="color: var(--comic-black);"
              aria-label={t('nav.experience', lang)}
            >
              <i class="fas fa-briefcase text-base sm:text-lg group-hover:scale-125 transition-transform" style="color: var(--comic-blue);"></i>
              <span class="text-xs mt-0.5 sm:mt-1 font-bold hidden xs:block" style="font-family: var(--font-comic);">{t('nav.mobile.exp', lang)}</span>
            </a>

            <a
              href={localePath('/projects', lang)}
              class="flex flex-col items-center justify-center px-2 sm:px-4 py-2 sm:py-3 transition-all duration-200 rounded-lg group min-w-[44px]"
              style="color: var(--comic-black);"
              aria-label={t('nav.projects', lang)}
            >
              <i class="fas fa-code text-base sm:text-lg group-hover:scale-125 transition-transform" style="color: var(--comic-orange);"></i>
              <span class="text-xs mt-0.5 sm:mt-1 font-bold hidden xs:block" style="font-family: var(--font-comic);">{t('nav.mobile.code', lang)}</span>
            </a>

            <a
              href={localePath('/contact', lang)}
              class="flex flex-col items-center justify-center px-2 sm:px-4 py-2 sm:py-3 transition-all duration-200 rounded-lg group min-w-[44px]"
              style="color: var(--comic-black);"
              aria-label={t('nav.contact', lang)}
            >
              <i class="fas fa-envelope text-base sm:text-lg group-hover:scale-125 transition-transform" style="color: var(--comic-green);"></i>
              <span class="text-xs mt-0.5 sm:mt-1 font-bold hidden xs:block" style="font-family: var(--font-comic);">{t('nav.mobile.mail', lang)}</span>
            </a>
          </div>
        </div>
      </nav>
    </main>

    <Footer lang={lang} />

    <!-- Comic scroll-to-top button -->
    <button
      id="scrollToTop"
      class="hidden fixed bottom-6 right-6 z-40 rounded-lg p-3 cursor-pointer"
      style="background: var(--comic-red); color: white; border: 3px solid var(--comic-black); box-shadow: var(--comic-shadow-sm);"
      aria-label="Scroll to top"
    >
      <i class="fas fa-arrow-up text-lg font-bold"></i>
    </button>

    <script>
      // Scroll to top
      const scrollToTopBtn = document.getElementById('scrollToTop');
      
      window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
          scrollToTopBtn?.classList.remove('hidden');
        } else {
          scrollToTopBtn?.classList.add('hidden');
        }
      });
      
      scrollToTopBtn?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      // Page load animation
      document.addEventListener('DOMContentLoaded', () => {
        document.body.classList.add('animate-slide-in-up');
      });

      // Intersection Observer for scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-slide-in-up');
          }
        });
      }, observerOptions);

      document.querySelectorAll('.animate-on-scroll').forEach(el => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
